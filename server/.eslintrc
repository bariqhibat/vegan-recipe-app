{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest/globals": true
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "quotes": [2, "double", { "avoidEscape": true }],
    "import/prefer-default-export": 0,
    "func-names": 0,
    "prettier/prettier": "error",
    "consistent-return": 1,
    "no-underscore-dangle": 0,
    "import/no-unresolved": [
      2,
      {
        "ignore": ["^src/"],
        "caseSensitive": true,
        "commonjs": true
      }
    ]
  }
}
